html
body
  margin:0
  padding:0
  height: 100%
  overflow: hidden

body
  position: relative
  width: 100%
  height: 100%

  &.navigation-show
    .navigation-region
    .content
      left: 320px

.content
  position: absolute
  background: inherit
  left: 0
  box-sizing: border-box
  padding-top: 4.375rem
  width: 100%
  height: 100%
  transition: left 0.2s ease-out
  transform: translate3d(0, 0, 0)
  box-shadow: 0px 0px 8px 2px rgba(0, 0, 0, 0.57)

  .content-region
    position: absolute
    left: 10%
    right: 10%
    top: 10%
    bottom: 3%
    overflow: hidden

@media screen and (max-width: 640px)
  body
    &.navigation-show
      .navigation-region
      .content
        left: 260px
